[Unit]
Description=VictoriaMetrics Storage Node
After=network.target

[Service]
Type=simple
User={{ vm_user }}
Group={{ vm_group }}
ExecStart={{ vm_install_dir }}/vmstorage-prod \
  -storageDataPath={{ vm_data_dir }}/vmstorage-data \
  -retentionPeriod={{ vmstorage_retention }} \
  -httpListenAddr=:{{ vmstorage_port }} \
  -vminsertAddr=:8400 \
  -vmselectAddr=:8401
Restart=always
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
