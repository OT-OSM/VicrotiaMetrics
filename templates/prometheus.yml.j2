global:
  scrape_interval: 15s
  external_labels:
    dc: "{{ dc }}"
    env: "{{ env }}"
    owner: "{{ owner }}"

scrape_configs:
  - job_name: 'vmagent'
    static_configs:
      - targets: ['localhost:{{ vmagent_port }}']
  
  - job_name: 'victoriametrics-cluster'
    static_configs:
      - targets:
          - 'localhost:{{ vmstorage_port }}'
          - 'localhost:{{ vminsert_port }}'
          - 'localhost:{{ vmselect_port }}'

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']
