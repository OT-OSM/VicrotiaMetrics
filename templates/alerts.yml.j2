groups:
  - name: vmalert
    rules:
      - alert: VictoriaMetricsClusterDown
        expr: up{job="victoriametrics-cluster"} == 0
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: "Instance {{ '{{' }} $labels.instance {{ '}}' }} down"
          description: "{{ '{{' }} $labels.instance {{ '}}' }} of job {{ '{{' }} $labels.job {{ '}}' }} has been down for more than 1 minute."
